{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "out/webview",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/webview/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/extension/**/*"
  ]
}