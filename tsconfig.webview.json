{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "out/webview"
  },
  "include": [
    "src/webview/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/extension/**/*"
  ]
}